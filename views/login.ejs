<%-include('partials/header') -%>

<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">
            Email address
          </label>
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" id="submit-btn"class="btn btn-primary">Submit</button>
        <button  type="submit" class="btn btn-primary demo" id="testbtn">Demo Mode</button>
        <script>
          document
            .getElementsById("testbtn")
            .addEventListener("click", demoMode);
          function demoMode() {
            document.getElementById("exampleInputEmail1").value =
              "test@testing.com";
            document.getElementById("exampleInputPassword1").value = "123456789";
          }
        </script>
      </form>

      <a  id="login-page-signup-btn"class="btn btn-primary mt-3" href="signup"
        >Don't have an account? Sign up here</a
      >
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
