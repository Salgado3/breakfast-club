<%- include('partials/header') -%>
<div class="container">
  <div class="container mb-5">
    <h2>Feed</h2>

    <p>Good Morning <%=user.userName%>!</p>
    <h4>What's for breakfast?</h4>
  </div>


  <div class="container mx-auto">
    <% for( let i = 0; i < posts.length; i++ ) { %>
    <div class="mb-5">
      <img
        class="userImages"
        src="<%=posts[i].image%>"
        alt="<%=posts[i].name%>"
      />
     
      <p>Created by:<%=posts[i].user%></p>

      <!-- Like button feature form and button -->
      <form
        action="/posts/likePost/<%= posts[i]._id %>?_method=PUT"
        method="POST"
      >
        <button class="btn btn-primary" type="submit">Like</button>
      </form>
    </div>
    <% } %>
  </div>
  <%- include('partials/footer') -%>
</div>
